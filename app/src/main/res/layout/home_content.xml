<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <include
        android:id="@+id/abs_playlists"
        layout="@layout/abs_playlists" />
        
    <LinearLayout
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <zzh.lifeplayer.music.views.RetroShapeableImageView
            android:id="@+id/emptyEmojiView"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:retroCornerSize="32dp"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_isemptt" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/emptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/nothing_to_see"
            android:textAppearance="@style/TextViewHeadline5"
            android:textColor="?android:attr/textColorSecondary"
            tools:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- hey its banner view at home page -->
        <include
            android:id="@+id/suggestions"
            layout="@layout/item_suggestions" />

        <zzh.lifeplayer.music.views.insets.InsetsRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="@integer/overScrollMode"
            android:paddingBottom="@dimen/mini_player_height"
            tools:itemCount="10"
            tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/item_album_card"
            tools:spanCount="3" />
    </LinearLayout>
</LinearLayout>
